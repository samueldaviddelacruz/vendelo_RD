<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.practices.samuel.vendelo_rd_android.RegisterActivity"
    android:weightSum="1"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="Registro de nueva cuenta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:textSize="24sp"
                android:textAlignment="center" />

            <TextView
                android:text="Nombre:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/labelNombre"
                android:textSize="18sp"
                android:textStyle="normal|bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editNombre" />

            <TextView
                android:text="Correo electrónico:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/labelCorreo"
                android:textSize="18sp"
                android:textStyle="normal|bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/editCorreo" />

            <TextView
                android:text="Contraseña:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/labelContrasena"
                android:textSize="18sp"
                android:textStyle="normal|bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/editPassword" />

            <TextView
                android:text="(Al menos 5 caracteres)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView13" />

            <TextView
                android:text="Confirma la contraseña:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/labelConfirmPass"
                android:textSize="18sp"
                android:textStyle="normal|bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/editPasswordConfirm" />

            <Button
                android:text="Crear Cuenta!"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnCrearCuenta"
                android:onClick="Register" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
